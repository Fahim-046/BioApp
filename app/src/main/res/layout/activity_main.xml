<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/app_theme">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:src="@drawable/profile_pic"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/aboutmetv"
            app:layout_constraintVertical_bias=".25"/>
        <TextView
            android:id="@+id/nametv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="@string/name"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/profile_pic"
            app:layout_constraintStart_toStartOf="@id/profile_pic"
            app:layout_constraintEnd_toEndOf="@id/profile_pic"
            app:layout_goneMarginTop="5dp"/>

        <TextView
            android:id="@+id/titletv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/title"
            android:textColor="#FCF1F1"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@id/nametv"
            app:layout_constraintStart_toStartOf="@id/nametv"
            app:layout_constraintEnd_toEndOf="@id/nametv"
            />

        <TextView
            android:id="@+id/contacttv"
            android:layout_width="109dp"
            android:layout_height="29dp"
            android:layout_gravity="center"
            android:background="@drawable/button_border"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:text="Contact me"
            android:textColor="#043B5C"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/titletv"
            app:layout_constraintStart_toStartOf="@+id/titletv"
            app:layout_constraintTop_toBottomOf="@+id/titletv"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/aboutmetv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias=".47"
            app:layout_constraintHeight_percent=".07"
            app:layout_constraintWidth_percent=".8"
            android:background="@drawable/border"
            android:textColor="@color/app_theme"
            android:fontFamily="@font/lato_bold"
            android:text="About me"
            android:textSize="16sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/linkedin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/aboutmetv"
            app:layout_constraintStart_toStartOf="@id/aboutmetv"
            app:layout_constraintEnd_toEndOf="@id/aboutmetv"
            android:layout_marginTop="20dp"
            app:layout_constraintHeight_percent=".07"
            app:layout_constraintWidth_percent=".8"
            android:background="@drawable/border"
            android:textColor="@color/app_theme"
            android:text="Linkedin"
            android:fontFamily="@font/lato_bold"
            android:textSize="16sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/problemsolve"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/linkedin"
            app:layout_constraintStart_toStartOf="@id/linkedin"
            app:layout_constraintEnd_toEndOf="@id/linkedin"
            android:text="Problem Solving"
            android:textColor="@color/app_theme"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintHeight_percent=".07"
            app:layout_constraintWidth_percent=".8"
            android:background="@drawable/border"
            android:fontFamily="@font/lato_bold"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/github"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/problemsolve"
            app:layout_constraintStart_toStartOf="@id/problemsolve"
            app:layout_constraintEnd_toEndOf="@id/problemsolve"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="@color/app_theme"
            android:text="Github"
            android:gravity="center"
            android:fontFamily="@font/lato_bold"
            app:layout_constraintHeight_percent=".07"
            app:layout_constraintWidth_percent=".8"
            android:background="@drawable/border"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>


